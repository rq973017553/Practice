<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
         <!--Customize your theme here. -->
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppThem" parent="AppTheme.Base">
    </style>
    
    <style name="app_common_bg">
        <item name="android:background">@android:color/white</item>
    </style>
    
    <style name="my_menu" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">1dp</item>
        <item name="android:dropDownVerticalOffset">1dp</item>
    </style>

    <!--自定义seek_bar_style-->
    <style name="CustomSeekBarStyle" parent="@android:style/Widget.Holo.SeekBar">
        <item name="android:maxHeight">2dp</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:progressDrawable">@drawable/seek_indeterminate_bg</item>
        <item name="android:thumb">@drawable/player_thumb</item>
    </style>
</resources>
